{
  "name": "onward-theatre",
  "version": "1.0.0",
  "description": "The website for a new improv theater in Atlanta, opening 2021.",
  "main": "server.js",
  "homepage": "https://onward-theatre.herokuapp.com",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roblingjohn/onward-theatre.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/roblingjohn/onward-theatre/issues"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "config": "^3.3.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.5",
    "if-env": "^1.0.4",
    "mongoose": "^5.10.5",
    "react-big-calendar": "^0.27.0"
  }
}
